<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idoston.e_book_store.Bookstore"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Insert ebook"
        android:onClick="Insert_ebook"
        android:textAllCaps="false"
        android:id="@+id/id_insert_ebook"
        android:background="@color/color_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="View books"
        android:onClick="View_all_books"
        android:textAllCaps="false"
        android:id="@+id/id_view_all_books"
        android:background="@color/color_button"/>

</LinearLayout>
